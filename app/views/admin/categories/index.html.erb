<div class="container admin-categories">
  <% provide :button_text, t("search") %>
  <%= render "search_form" %>
  <div class="list-categories-admin">
    <%= link_to t(".create_category"), new_admin_category_path,
      class: "btn btn-info" %>
    <table class="table">
      <thead>
        <tr>
          <th><%= t "name" %></th>
          <th><%= t "duration" %></th>
          <th><%= t "word_per_lesson" %></th>
          <th><%= t "option" %></th>
        </tr>
      </thead>
      <tbody class="list-category">
        <%= render @categories %>
      </tbody>
      <%= will_paginate %>
    </table>
  </div>
</div>
