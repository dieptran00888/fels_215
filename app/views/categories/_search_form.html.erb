<%= form_tag categories_path, method: :get do %>
  <div class="col-md-6 col-md-offset-3">
    <%= text_field_tag :search, params[:search], placeholder:
      t(".search_categories"),
        class: "form-control" %>
    <%= submit_tag yield(:button_text), class: "btn btn-primary" %>
  </div>
<% end %>
